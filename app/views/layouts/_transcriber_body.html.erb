<body class="fixed skin-blue">
<div class="wrapper" style="background: white">
  <%= render 'shared/navbar' %>
  <div style="padding-top: 60px"></div>
  <%= render 'shared/flash' %>
  <section class="content">

    <div class="row">
      <div class="col-md-2">

        <!-- Profile Image -->
        <div class="box box-primary">
          <div class="box-body box-profile">
            <img class="profile-user-img img-responsive img-circle" src="<%= image_path current_transcriber.img if current_transcriber.img %>" alt="User profile picture">

            <h3 class="profile-username text-center"><%= current_transcriber.name %></h3>

            <p class="text-muted text-center"><%= current_transcriber.email %></p>



          </div>
          <!-- /.box-body -->
        </div>
        <!-- /.box -->

        <!-- About Me Box -->
        <div class="box box-primary">
          <div class="box-header with-border">
            <h3 class="box-title">About Me</h3>
          </div>
          <!-- /.box-header -->
          <div class="box-body">
            <strong><i class="fa fa-book margin-r-5"></i> Education</strong>

            <p class="text-muted">
              <%= current_transcriber.name %>
            </p>

            <hr>

            <strong><i class="fa fa-map-marker margin-r-5"></i> Location</strong>

            <p class="text-muted"><%= current_transcriber.business.location %></p>

            <hr>

          </div>
          <!-- /.box-body -->
        </div>
        <!-- /.box -->
      </div>
      <!-- /.col -->
      <div class="col-md-7">
        <!-- /.nav-tabs-custom -->
        <%= yield %>
        <div class="row" style="position: fixed;bottom: 0;width: 100%;">
          <div class="col-md-12">
            <div id="chat-row" class="chat pull-right"></div>
          </div>
        </div>
      </div>
      <div class="col-md-3">
        <div class="">

          <h3>Conversation</h3>
          <div class="box box-solid">
            <div class="box-header with-border">

              <div class="box-tools">
              </div>
            </div>
            <div class="box-body no-padding">
              <ul class="nav nav-pills nav-stacked">
                <% current_transcriber.get_conversations.each do |convo| %>
                    <% user = get_user %>
                    <% if convo.sendable==user %>
                        <% other = convo.recipientable %>
                    <% else %>
                        <% other = convo.sendable %>
                    <% end %>
                    <li><a href="<%= conversation_path(convo) %>" data-remote="true"><%= image_tag other.img, class: 'img-circle', height: '32', width: '32' %> <%= other.name %> <span class="label label-warning pull-right"></span></a>
                    </li>
                <% end %>
              </ul>
            </div>
            <!-- /.box-body -->
          </div>



        </div>
      </div>
      <!-- /.col -->
    </div>
    <!-- /.row -->

  </section>

</div>
</body>