<% if message.sendable %>
    <% if get_user!=message.sendable %>
        <div class="direct-chat-msg">
          <div class="direct-chat-info clearfix">
            <span class="direct-chat-name pull-left"><%= message.sendable.name if message.sendable %></span>
            <span class="direct-chat-timestamp pull-right"><%= message.created_at %></span>
          </div>
          <!-- /.direct-chat-info -->
          <img class="direct-chat-img" src="<%= image_path message.sendable.img unless message.sendable.nil? && message.sendable.nil? %>" alt="Message User Image"><!-- /.direct-chat-img -->
          <div class="direct-chat-text">
            <%= message.content %>
          </div>
          <!-- /.direct-chat-text -->
        </div>
    <% else %>
        <div class="direct-chat-msg right">
          <div class="direct-chat-info clearfix">
            <span class="direct-chat-name pull-right"><%= 'You' %></span>
            <span class="direct-chat-timestamp pull-left"><%= message.created_at %></span>
          </div>
          <!-- /.direct-chat-info -->
          <img class="direct-chat-img" src="<%= image_path message.sendable.img unless message.sendable.nil? && message.sendable.nil? %>" alt="Message User Image"><!-- /.direct-chat-img -->
          <div class="direct-chat-text">
            <%= message.content %>
          </div>
          <!-- /.direct-chat-text -->
        </div>
    <% end %>
<% end %>